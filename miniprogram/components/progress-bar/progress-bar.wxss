/* components/progress/progress-bar.wxss */
.progress-box{
  display: flex;
  align-items: center;
}
.contr{
  position: relative;
  flex:1;
}
.movable-area{
  width: 100%;
  height: 34rpx;
  position: absolute;
  left: 0;
  bottom: -14rpx;
}
.movable-view{
  width: 36rpx;
  height: 36rpx;
  background-color: #fefefe;
  border-radius: 50%;
}
.time{
  width: 64rpx;
  padding: 0 20rpx;
  font-size: 24rpx;
  color: #fff;
  font-weight: 400;
  line-height: 30rpx;
}