/* components/playList.wxss */
.play{
  position: relative;
  width: 220rpx;
  margin-bottom: 10rpx;
}
.playListImg{
  width: 100%;
  height: 220rpx;
  border-radius: 3px;
}
.playListName{
  font-size: 24rpx;
  line-height: 1.2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
  color: #333333;
}
.playListNum{
  position: absolute;
  right: 10px;
  top: 4px;
  padding-left: 20px;
  color: white;
  background-image: url("data:image/png;base64,");
  background-repeat: no-repeat;
  background-size: 32rpx 32rpx;
  background-position-y: 4px;
}