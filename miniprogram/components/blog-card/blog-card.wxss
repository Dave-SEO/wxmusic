/* components/blog-card/blog-card.wxss */
.header{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.avtor{
  display: inline-block;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-size: cover;
  background-repeat: no-repeat;
}
.header-right{
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}
.contet{
  margin: 10rpx 0;
}
.imgBox{
  width: 200rpx;
  height: 200rpx;
  margin-left: 10rpx;
}
.imgBox image{
  width: 100%;
  height: 100%;
}
.imagesContent{
  display: flex;
  flex-wrap: wrap;
}
.time{
  font-size: 24rpx;
  color: #ccc;
}
.blogCardContent{
  padding: 15rpx 15rpx;
  box-sizing: border-box;
  background: #ffffff;
}