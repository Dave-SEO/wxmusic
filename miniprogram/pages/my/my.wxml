      </navigator>
    </view>
    <view class="nav-item">
      <navigator hover-class="none" url="/pages/myblog/myblog"  class="navigator">
        <i class="iconfont icon-weibiaoti-_huabanfuben iconleft"></i>
        <text>我发布的</text>
