      <navigator hover-class="none" class="navigator" >
        <i class="iconfont icon-xiaochengxuma iconleft"></i>
        <text>小程序码</text>
        <i class="iconfont icon-fanhui iconright"></i>
      </navigator>
    </view>
  </view>
