/* pages/playlist/playlist.wxss */
.playlistBox{
  position: relative;
  height: 300rpx;
  display: flex;
  align-items:center;
}
.mask{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 300rpx;
  background: #333;
  z-index: -1;
}
.coverImgUrl{
  width: 100%;
  height: 300rpx;
  position: absolute;
  top: 0;
  left: 0;
  filter: blur(40rpx);
  opacity: 0.4;
}
.avtar{
  position: relative;
  width: 200rpx;
  height: 200rpx;
  margin-left: 20rpx;
  border-radius: 3px;
}
.name{
  position: relative;
  color: white;
  margin-left: 20rpx;
}