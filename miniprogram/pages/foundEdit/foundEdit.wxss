/* pages/foundEdit/foundEdit.wxss */
.textarea{
  width: 100%;
  height: 350rpx;
  padding: 20rpx;
  border: 1rpx solid #ccc;
  box-sizing: border-box;
}
.addimg{
  width: 200rpx;
  height: 200rpx;
  border: 1px dashed #ccc;
  position: relative;
  margin: 15rpx 15rpx 0 0;
}
.icon-add{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: #eeeeee;
  font-size: 50rpx;
}
.footer{
  width: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: fixed;
  bottom: 0;
  left: 0;
  padding-right: 25rpx;
  box-sizing: border-box;
  padding: 30rpx;
  height: 150rpx;
}
.words{
  margin-right: 20rpx;
  text-align: center;
}
.footer .btn{
  background: #fa5151;
  color: #fff;
  width: 200rpx !important;
  margin: 0;
}
.imgContent{
  display: flex;
  flex-wrap: wrap;
}
.imagesBox{
  width: 200rpx;
  height: 200rpx;
  margin: 15rpx 15rpx 0 0;
  position: relative;
}
.imagesBox .img{
  width: 100%;
  height: 100%;
}
.icon-del{
  position: absolute;
  right: 4rpx;
  top: 4rpx;
  background: rgba(0,0,0,0.2);
  color: #fff;
}